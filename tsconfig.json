        "outDir": "dist",
        "target": "es2018",
        "module": "es2015",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "allowJs": true,
        "checkJs": true,
        "strictNullChecks": true,
        "types": []
